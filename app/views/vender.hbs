<!DOCTYPE html>
<html>
<head>
	<title>Vender</title>
	<link href="https://fonts.googleapis.com/css?family=Montserrat" rel="stylesheet">
	<link rel="stylesheet" type="text/css" href="/styles/productos.css">
	
</head>
<body>
	{{> menu}}

	<main class="main">
		<h1 class="titulo">Vender</h1>
		<div class="contenedor">
			<input type="text" name="txt1" id="txtbuscarProductos" placeholder="Buscar producto" class="txt1">
			<div class="cuadro-2">
			<table class="tabla" id="tablaProductosDB">
				  <tr>
				    <th>Nombre</th>
					<th>Precio</th> 
				    <th>Cantidad</th>
					<th>Agregar</th>
				  </tr>

				</table>
			</div>
			<div class="cuadro-2">
				<table class="tabla" id="tablaProductos">
				  <tr>
				    <th>Nombre</th>
				    <th>Precio</th> 
				    <th>Cantidad</th>
					<th style="display:none">codigo</th>
				  </tr>

				</table>
			</div>
			<div class="cuadro-3">
				<label id="totalPrecio">Total: $ 0</label>
				<div class="divBotons">
					<button class="botonCotizar" id="btnFiar">Fiar</button>
					<button class="botonCotizar" id="btnCotizar" >Cotizar</button>
				</div>
			</div>
		</div>
	</main>
	
	<div class="divFiadores">
		
		<div class="cuadroFiadores">
			<div  class="headerFiadores">
				<label class="labelFiar">Fiar</label>
				<img id="cerrar" src="data:image/svg+xml;utf8;base64," />
			</div>
			<div class="bodyFiadores">
				<div class="buscarFiador">
					<input type="text" placeholder="Nombre de quien ve a fiar">
				</div>
				<div class="listaFiadores">
					<table>
						<tr>
						    <th>Nombre</th>
						    <th>Fiado</th> 
						    <th>Tope maximo</th>
						    <th>Accion</th>
				  		</tr>
					 	<tr>
						    <td>Lucas Casemiro Perez</td>
						    <td>$5.000</td> 
						    <td>$20.000</td>
						    <td><button>Fiar</button></td>
					  	</tr>

					</table>
				</div>
			</div>
		</div>

	</div>

<script src="Javascript/vender.js"></script>
</body>
</html>